<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.glassxx.pullrefresh.MainActivity">

    <Button
        android:id="@+id/scroll_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start scroll_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scroll_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start scroll_minus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/scroll_add" />

    <cn.glassxx.pullrefresh.principle.ScrollLayout
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="I'm Header"
            android:gravity="center"
            android:background="@android:color/holo_green_light"/>
    </cn.glassxx.pullrefresh.principle.ScrollLayout>

</android.support.constraint.ConstraintLayout>
